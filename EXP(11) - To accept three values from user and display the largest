//To accept three values from user and display the largest

import java.util.Scanner;
    public class Coparison{
        public static void main(String[]args){
        int a,b,c;
        Scanner obj = new Scanner(System.in);
        System.out.println("Enter three nos. of your choice:");
         a = obj.nextInt();
         b = obj.nextInt();
         c = obj.nextInt();
       if(a>b && a>c){
            System.out.println("The largest no. is:"+a);
                 }
             else if(b>c){
                 System.out.println("The largest no. is:"+b);
             }     
                   else
                      System.out.println("The largest no. is:"+c);
        } 
    }
