public class Hospital{
        String name; int age; String dayofap; String nmdoc;
        Hospital()
         {  
            name = "Suchi";
            age = 24;
            dayofap = "Monday";
            nmdoc = "Dr. Sushant Shetty";
         }
         
          Hospital(String nm, int a, String d, String doc){
               name = nm;
               age = a;
               dayofap = d;
               nmdoc = doc;
         }
             
        public void patientdetails(){
            System.out.println("The name of the patient is: "+name);
            System.out.println("Age of the patient is: "+age);
            System.out.println("Day of appointment: "+dayofap);
            System.out.println("Name of the doctor: "+nmdoc +'\n');
            
        }
          
public static void main(String args[]){
         Hospital out = new  Hospital();
        out.patientdetails();
         Hospital ab = new Hospital("Priyal", 30, "Tuesday", "Dr. Mithila Rathod");
        ab.patientdetails();
    }
}
         
