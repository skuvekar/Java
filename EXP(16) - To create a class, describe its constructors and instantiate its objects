import java.util.Sanner;   
public class Details{
        String name; int age; int weight;
        Details()
         { String name = "Suchi";
           int age = 24;
           int weight = 50;
         }
         
         Details(String nm, int a, int w){
               name = nm;
               age = a; 
               weight = w; 
             }
             
        void patientdetails(){
            System.out.println("The name of the patient is: "+name);
            System.out.println("Age of the patient is: "+age);
            System.out.println("Weight of the patient is: "+weight);
            
        }
          
public static void main(String args[]){
        Details obj = new Details();
        obj.display();
        Details obj1 = new Details("Priyal", 30, 48);
        obj1.display();
    }
}
         
